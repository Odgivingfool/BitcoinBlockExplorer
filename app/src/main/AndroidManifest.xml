<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.merkur.bitcoinblockexplorer">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="io.merkur.bitcoinblockexplorer.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="io.merkur.bitcoinblockexplorer.activities.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="io.merkur.bitcoinblockexplorer.activities.PeerActivity"
            android:label="@string/title_activity_peer"
            android:parentActivityName=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="https"
                    android:path="/search"
                    android:host="insight.bitpay.com" />
            </intent-filter>
        </activity>

        <activity
            android:name="io.merkur.bitcoinblockexplorer.activities.BlockActivity"
            android:label="@string/title_activity_block"
            android:parentActivityName=".activities.MainActivity"/>

        <activity
            android:name="io.merkur.bitcoinblockexplorer.activities.TxActivity"
            android:label="@string/title_activity_tx"
            android:parentActivityName=".activities.MainActivity"/>


        <receiver
            android:name="io.merkur.bitcoinblockexplorer.ConnectivityReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
    </application>

</manifest>